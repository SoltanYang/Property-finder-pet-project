<div class="property-main-photo" style="background-image:url('<%= cover_image_url @account %>')">
  <div class="photo-overlay">

  </div>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-sm-8">

      <div class="row">
        <div class="col-sm-4">
          <p class="h4 mb-2"><%= @account.full_name %></p>
          <p class="mb-0"><%= @account.company %></p>
          <p class="text-muted">Registered for <%= time_ago_in_words @account.created_at %></p>
        </div>


      </div>
      <div class="row border-top mt-3">
        <div class="col">
          <p class="h4">Description</p>
          <div id="property-details">
            <%= simple_format @account.details %>
          </div>

          <button class="btn btn-outline-info mt-3" id="toggleDetails">Read more</button>

        </div>
      </div>

    </div>
    <div class="col-sm-4">
      <%= render 'properties/profile_details' %>

      <div class="col-md-10 text-center offset-md-1">
        <div class="row mt-sm-3 bg-light p-3">
          <div class="col-6">
            <p class="lead"><%= @properties_sold %><br/>Sold</p>
          </div>
          <div class="col-6">
            <p class="lead"><%= @properties_for_sale %><br/>For Sale</p>
          </div>
          <div class="col-6">
            <p class="lead"><%= @properties_leased %><br/>Leased</p>
          </div>
          <div class="col-6">
            <p class="lead"><%= @properties_for_rent %><br/>For Rent</p>
          </div>
        </div>
      </div>

    </div>
  </div>

  <section class="my-5">
    <div class="container">
      <div class="row">
        <p class="h2">Other properties by this agent</p>
        <%= render 'properties/list', properties: @properties %>
      </div>
    </div>
  </section>

</div>

<%= render "properties/send_email_modal", agent: @account %>