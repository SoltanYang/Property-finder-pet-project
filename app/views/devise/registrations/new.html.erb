<section class="form-auth text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 fw-normal">Please sign up</h1>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-floating">
      <%= f.text_field :first_name, autocomplete: "first-name", autofocus: true, class: "form-control", id: 'floatingInput' %>
      <label for="floatingInput" class="form-label">First name</label>
    </div>

    <div class="form-floating">
      <%= f.text_field :last_name, autocomplete: "last-name", class: "form-control", id: 'floatingInput' %>
      <label for="floatingInput" class="form-label">Last name</label>
    </div>

    <div class="form-floating">
      <%= f.email_field :email, autocomplete: "email", class: "form-control", id: 'floatingInput' %>
      <label for="floatingInput" class="form-label">Email address</label>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', id: 'floatingPassword' %>
      <label for="floatingPassword">Password</label>
    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', id: 'floatingPassword' %>
      <label for="floatingPassword">Password Confirmation</label>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "w-100 btn btn-lg btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>