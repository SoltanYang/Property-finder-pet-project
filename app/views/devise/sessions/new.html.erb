<section class="form-auth text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: 'floatingInput' %>
      <label for="floatingInput" class="form-label">Email address</label>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', id: 'floatingPassword' %>
      <label for="floatingPassword">Password</label>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary" %>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
