<!DOCTYPE html>
<html>
<head>
  <title>PropertyFinder</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <!-- Bootstrap CSS -->
<!--  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">-->
<!--  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">-->
  <%= javascript_pack_tag 'application' %>
</head>

<body id="<%= controller.controller_name %>"
  class="<%= controller.action_name %> d-flex flex-column h-100">

<% if @show_sidebar.nil? %>
  <header>
    <%= render "layouts/nav/public" %>
  </header>
  <%= yield %>

<% else %>
  <header>
    <%= render "layouts/nav/dashboard" %>
  </header>
  <div class="container-fluid">
    <div class="row">
      <%= render 'layouts/nav/dashboard_sidebar' %>
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mt-4">
        <%= yield %>
      </main>
    </div>
  </div>
<% end %>

<div id="notification">
  <p class="notice"><%= flash_notifications %></p>
</div>


<footer class="footer mt-auto py-3 bg-light">
  <%= render 'layouts/footer' %>
</footer>
<!-- Bootstrap JavaScript Bundle with Popper -->
<!--<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>-->

</body>
</html>
