<div class="container" id="home-banner">
  <div class="p-5 mb-4 bg-light rounded-3 banner">
    <div class="container-fluid py-5">
      <h1 class="display-5 fw-bold">Latest Blog Posts</h1>
      <p class="col-md-8 fs-4">Stay up to date with the latest news at Property Finder!</p>
<!--      <button class="btn btn-primary btn-lg" type="button">Example button</button>-->
    </div>
  </div>

  <% if @posts.empty? %>
    <p>No posts to display</p>
  <% else %>
    <% @posts.each do |post| %>
      <div class="row">
        <div class="col">
          <h2><%= post.title %></h2>
          <p><%= post.summary %></p>
          <%= link_to "Read more", post_path(post), class: "btn btn-success" %>
        </div>

      </div>
      <hr />
    <% end %>
  <% end %>
</div>

