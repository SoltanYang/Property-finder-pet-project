<div class="modal fade" id="sendEmailModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New message for <%= agent.full_name %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <%= form_tag email_agent_path, id: "email-agent" do %>
          <%= hidden_field_tag :agent_id, agent.id %>

          <div class="form-group">
            <label for="message-first-name" class="col-form-label">First Name:</label>
            <%= text_field_tag :first_name, nil, class: "form-control", id: "message-first-name" %>
          </div>

          <div class="form-group">
            <label for="message-last-name" class="col-form-label">Last Name:</label>
            <%= text_field_tag :last_name, nil, class: "form-control", id: "message-last-name" %>
          </div>

          <div class="form-group">
            <label for="message-email" class="col-form-label">Email address:</label>
            <%= text_field_tag :email, nil, class: "form-control", id: "message-email" %>
          </div>

          <div class="form-group">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea id="message-text" class="form-control" cols="30" rows="10"></textarea>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success" id="send-message-to-agent">Send message</button>
      </div>
    </div>
  </div>
</div>
